@media screen and (max-device-width: 1200px)
  body
    .background
      .container
        height: 1200px
        .ippodrom
          top: 60px
          width: 100%
        .container-for-two
          display: block
          .hourses
            width: 100%
            background-position: center
          .radio-montecarlo-block
            margin: 20px auto
  footer
    .container-footer
      .footer-links-block
        flex-wrap: wrap;
        margin-bottom: 35px
        padding: 0 20px
        justify-content: space-around
        a
          margin: 8px 8px
      .social-footer-block
        padding-top: 0
    a.apptimizm
      float: none
      display: flex
      margin-right: 0
      margin-top: 30px
      justify-content: center
    p.center
      width: 80%
      display: flex
      margin: 0 auto
      margin-bottom: 40px
      justify-content: center
@media (max-device-width: 979px)
  .form
    padding-left: 10px
    padding-right: 10px
    padding: 30px 10px
    width: 100%
    -webkit-box-sizing: border-box
    box-sizing: border-box
    .close
      margin-top: -20px
    .first
      display: block
      a
        width: 25%
        display: inline-block
        text-align: center
        margin-bottom: 5px
    .gall
      .images
        margin-left: 0
        height: 360px
        overlay: hidden
        max-width: 100%
        li.active
          display: block
          margin-left: 50% !important
          -webkit-transform: translateX(-50%)
          -ms-transform: translateX(-50%)
          transform: translateX(-50%)
          margin-top: 10px !important
          img
            width: auto !important
            max-height: 320px
        li.next
          display: block
          position: absolute
          display: none
          opacity: 0.3
          margin-left: 625px
          margin-top: 100px
        li.prev
          display: block
          display: none
@media screen and (max-device-width: 768px)
  body
    .background
      .container
        .social-links-block
          padding-top: 20px
        .ippodrom
          top: 150px
          height: inherit
        .jump-title
          margin-top: 170px
          img
            width: 80%
        p.grand-prix
          margin-top: 50px
          margin-left: 0
          transform: rotate(-90deg)
        .social-event
          margin: 15px auto
          img
            width: 70%
        .container-for-two
          display: block
          .hourses
            width: 100%
            opacity: .99
            margin-top: 35px
            background-size: contain
          .radio-montecarlo-block
            .logo-radio
              top: 60px
              left: 0
              right: 0
              position: absolute
            .text
              max-width: 90%
              margin: 0 auto
              margin-bottom: 40px
              white-space: normal
            .links-group
              display: flex
              justify-content: center
              a.photoarchive
                margin-left: 0
                margin-right: 25px
                padding: 22px 10px 22px 10px
                &:after
                  display: none
              a.pre-order
                margin-left: -5px
                padding: 22px 10px 22px 10px
@media screen and (max-device-width: 375px)
  body
    .background
      .container
        .container-for-two
          .radio-montecarlo-block
            .links-group
              a.photoarchive, a.pre-order
                padding: 20px 5px 20px 5px
